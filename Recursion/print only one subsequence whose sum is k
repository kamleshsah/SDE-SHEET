def sub_sum_k(i,arr,carry,sum,k):
    if i==len(arr):
        if sum==k:
            print(carry)
            return True
        return False
    carry.append(arr[i])
    sum+=arr[i]
    if sub_sum_k(i+1,arr,carry,sum,k)==True:
        return True
    
    carry.pop(len(carry)-1)
    sum-=arr[i]
    if sub_sum_k(i+1,arr,carry,sum,k)==True:
        return True
    
    return False

arr=[1,2,1]
sub_sum_k(0,arr,[],0,3)
